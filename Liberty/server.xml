<server description="new server">

    <!-- Enable features -->
    <featureManager>
        <feature>webProfile-8.0</feature>
        <feature>localConnector-1.0</feature>
    </featureManager>
	
	<!-- Need for SpringBoot or else it complain about CDI -->
	<!--https://www.ibm.com/support/knowledgecenter/SS7K4U_liberty/com.ibm.websphere.wlp.zseries.doc/ae/twlp_dep_springboot.html-->
	<featureManager>
		<feature>springBoot-2.0</feature>
	</featureManager>
	
	<!-- JNDI Test -->
	<featureManager>
		<feature>jndi-1.0</feature>
	</featureManager>
	<jndiEntry jndiName="schoolOfAthens/defaultAdminUserName" value="&quot;plato&quot;"/>
	<jndiEntry jndiName="schoolOfAthens/defaultAdminPassword" value="&quot;republic&quot;"/>

	<!-- Derby Embedded DS -->
	<dataSource id="derbyEmbeddedDs" jndiName="jdbc/derbyEmbeddedDs">
		<jdbcDriver libraryRef="DerbyLib"/>
		<properties.derby.embedded createDatabase="create" databaseName="D:/Work/db/derby/db/firstdb"/>
	</dataSource>
	<library id="DerbyLib">
		<fileset dir="D:/Work/db/derby/db-derby-10.15.2.0-bin/lib"/>
	</library>
	
	<!-- Enable SSL https://www.ibm.com/support/knowledgecenter/en/SSAW57_liberty/com.ibm.websphere.wlp.nd.multiplatform.doc/ae/twlp_sec_ssl.html-->
	<featureManager>
		<feature>transportSecurity-1.0</feature>
		<feature>ssl-1.0</feature>
	</featureManager>
	<!-- need for ssl, generated by securityUtil -server=defaultServer -password=password -->
	<keyStore id="defaultKeyStore" password="{xor}Lz4sLCgwLTs="/>
	<!-- End Enable SSL -->
	
	
	<featureManager>
		<feature>adminCenter-1.0</feature>
		<feature>websocket-1.1</feature>
	</featureManager>
	<!-- enable adminCenter remote write access https://www.ibm.com/support/knowledgecenter/en/SSAW57_liberty/com.ibm.websphere.wlp.nd.multiplatform.doc/ae/twlp_ui.html-->
	<remoteFileAccess>
		<writeDir>${server.config.dir}</writeDir>
	</remoteFileAccess>
	<!-- https://www.ibm.com/support/knowledgecenter/en/SSAW57_liberty/com.ibm.websphere.wlp.nd.multiplatform.doc/ae/twlp_ui_setup.html#twlp_ui_setup__uiconfserv -->
	<!-- Define an Administrator and non-Administrator -->
   <basicRegistry id="basic">
      <user name="admin" password="admin"/>
      <user name="nonadmin" password="nonadminpwd"/>
   </basicRegistry>

   <!-- Assign 'admin' to Administrator -->
   <administrator-role>
      <user>admin</user>
   </administrator-role>
	
    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint httpPort="9080" httpsPort="9443" id="defaultHttpEndpoint"/>
                  
    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>
   
 
    <applicationMonitor updateTrigger="mbean"/>
</server>